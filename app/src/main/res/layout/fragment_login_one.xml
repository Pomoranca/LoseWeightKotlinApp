<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activities.fragments.LoginFragmentOne">


    <ImageView
        android:id="@+id/login_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/image_login_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to OneMinute Workout.\nPlease tell me your name?"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_background" />

    <EditText
        android:id="@+id/welcomeCardInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00FFFDE7"
        android:fontFamily="@font/raleway_black"
        android:hint="e.g. John"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="16"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="#43FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_card_text" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_white"
        app:layout_constraintEnd_toEndOf="@+id/welcome_card_text"
        app:layout_constraintStart_toStartOf="@+id/welcome_card_text"
        app:layout_constraintTop_toBottomOf="@+id/welcomeCardInput" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pick avatar"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <ImageView
        android:id="@+id/pick_male"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/avatar_selected"
        app:layout_constraintEnd_toStartOf="@+id/pick_female"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/male_pick_ful_size" />

    <ImageView
        android:id="@+id/pick_female"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/avatar_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pick_male"
        app:layout_constraintTop_toTopOf="@+id/pick_male"
        app:srcCompat="@drawable/female_pick_full_size" />


</androidx.constraintlayout.widget.ConstraintLayout>