<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#e0f2f1</item>
        <item name="colorPrimaryDark">#c7c7c7</item>
        <item name="colorPrimaryLight">#cfd8dc</item>
        <item name="colorSecondaryDark"></item>
        <item name="colorSecondaryLight">#549FC4</item>
        <item name="colorBackground">#ffffff</item>
        <item name="colorAccent">#e1bee7</item>
        <item name="android:textColor">#AD000000</item>

        <item name="textColorPrimary">#AD000000</item>
        <item name="textColorFaded">#CBFFFFFF</item>
        <item name="colorTextButton">#CBFFFFFF</item>


        <item name="bottomNavBackgrounds">#f5f5f5</item>
        <item name="bottomNavIcon">#c2c2c2</item>
        <item name="bottomNavPressed">#707070</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">true</item>

    </style>


    <style name="headerFont">
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="toolbarFont">
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottomNavFont">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="informationFontWhite">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="dialog_slide_out">
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="dialog_slide">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="dialog_fade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="ThemeCustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>


</resources>
